# App Configuration
NEXT_PUBLIC_SITE_URL=https://yoursite.com
NEXT_PUBLIC_SITE_NAME="Rahul Reddy Allu - Portfolio"

# Contact Form - Choose ONE method (SendGrid OR SMTP)

# Option 1: SendGrid (recommended for production)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yoursite.com
SENDGRID_FROM_NAME="Rahul's Portfolio"

# Option 2: SMTP (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Contact form destination
CONTACT_EMAIL=rahul@yoursite.com

# Optional: Resume attachment (set to 'true' to attach resume to contact emails)
ATTACH_RESUME_TO_EMAIL=false

# Analytics (optional - privacy-first)
# NEXT_PUBLIC_UMAMI_WEBSITE_ID=your_umami_id
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=yoursite.com

# Rate limiting (optional)
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_WINDOW_MS=900000
