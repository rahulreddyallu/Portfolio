# ============================================
# PREMIUM PORTFOLIO - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# ============================================
# APPLICATION CONFIGURATION
# ============================================
REACT_APP_NAME=Premium Portfolio
REACT_APP_VERSION=3.0.0
REACT_APP_AUTHOR=Rahul Reddy Allu
REACT_APP_DESCRIPTION=Premium portfolio with 3D graphics and advanced animations

# Environment (development, production, test)
NODE_ENV=development

# Build Configuration
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=10000

# ============================================
# API ENDPOINTS
# ============================================
# Backend API URL (if you have a backend)
REACT_APP_API_URL=https://api.example.com/v1
REACT_APP_API_TIMEOUT=30000

# Contact Form API
REACT_APP_CONTACT_API_URL=https://api.example.com/contact
REACT_APP_CONTACT_API_KEY=your_contact_api_key_here

# ============================================
# EMAIL SERVICE (EmailJS)
# ============================================
# Get your keys from: https://www.emailjs.com/
REACT_APP_EMAILJS_SERVICE_ID=service_xxxxxxx
REACT_APP_EMAILJS_TEMPLATE_ID=template_xxxxxxx
REACT_APP_EMAILJS_PUBLIC_KEY=xxxxxxxxxxxxxxxx
REACT_APP_EMAILJS_PRIVATE_KEY=xxxxxxxxxxxxxxxx

# ============================================
# GOOGLE ANALYTICS
# ============================================
# Google Analytics 4
REACT_APP_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Universal Analytics (Legacy)
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Google Tag Manager
REACT_APP_GTM_ID=GTM-XXXXXXX

# ============================================
# SOCIAL MEDIA & EXTERNAL LINKS
# ============================================
REACT_APP_GITHUB_URL=https://github.com/yourusername
REACT_APP_LINKEDIN_URL=https://linkedin.com/in/yourprofile
REACT_APP_TWITTER_URL=https://twitter.com/yourhandle
REACT_APP_INSTAGRAM_URL=https://instagram.com/yourhandle
REACT_APP_YOUTUBE_URL=https://youtube.com/@yourchannel

# Personal Contact
REACT_APP_EMAIL=rahul@example.com
REACT_APP_PHONE=+91-98765-43210
REACT_APP_LOCATION=Hyderabad, India

# ============================================
# CONTENT MANAGEMENT (if using CMS)
# ============================================
# Contentful
REACT_APP_CONTENTFUL_SPACE_ID=your_space_id
REACT_APP_CONTENTFUL_ACCESS_TOKEN=your_access_token
REACT_APP_CONTENTFUL_ENVIRONMENT=master

# Sanity.io
REACT_APP_SANITY_PROJECT_ID=your_project_id
REACT_APP_SANITY_DATASET=production
REACT_APP_SANITY_API_VERSION=2023-05-03

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features
REACT_APP_ENABLE_3D_GRAPHICS=true
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NEWSLETTER=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_CONTACT_FORM=true
REACT_APP_ENABLE_BLOG=false
REACT_APP_ENABLE_PWA=true

# ============================================
# PERFORMANCE & OPTIMIZATION
# ============================================
# Lazy loading threshold (in milliseconds)
REACT_APP_LAZY_LOAD_DELAY=300

# Image optimization
REACT_APP_IMAGE_QUALITY=85
REACT_APP_IMAGE_PLACEHOLDER_BLUR=10

# Cache duration (in seconds)
REACT_APP_CACHE_DURATION=3600

# ============================================
# THIRD-PARTY SERVICES
# ============================================
# Spotify API (for "Now Playing" widget)
REACT_APP_SPOTIFY_CLIENT_ID=your_client_id
REACT_APP_SPOTIFY_CLIENT_SECRET=your_client_secret
REACT_APP_SPOTIFY_REFRESH_TOKEN=your_refresh_token

# GitHub API (for repository stats)
REACT_APP_GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx
REACT_APP_GITHUB_USERNAME=yourusername

# SendGrid (for email notifications)
REACT_APP_SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxx
REACT_APP_SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Mailchimp (for newsletter)
REACT_APP_MAILCHIMP_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxx
REACT_APP_MAILCHIMP_LIST_ID=xxxxxxxxxx
REACT_APP_MAILCHIMP_SERVER_PREFIX=us1

# Airtable (for form submissions)
REACT_APP_AIRTABLE_API_KEY=keyxxxxxxxxxxxxxxx
REACT_APP_AIRTABLE_BASE_ID=appxxxxxxxxxxxxxxx
REACT_APP_AIRTABLE_TABLE_NAME=Contacts

# ============================================
# SECURITY & AUTHENTICATION
# ============================================
# JWT Secret (if implementing auth)
REACT_APP_JWT_SECRET=your_super_secret_jwt_key_here

# API Keys encryption
REACT_APP_ENCRYPTION_KEY=your_32_character_encryption_key

# CORS Allowed Origins
REACT_APP_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================
# GitHub Pages
PUBLIC_URL=https://yourusername.github.io/portfolio

# Custom Domain (if using)
# PUBLIC_URL=https://yourdomain.com

# Vercel
# VERCEL_URL=your-project.vercel.app

# Netlify
# NETLIFY_URL=your-project.netlify.app

# ============================================
# MONITORING & ERROR TRACKING
# ============================================
# Sentry (Error tracking)
REACT_APP_SENTRY_DSN=https://xxxxxxxx@sentry.io/xxxxxxx
REACT_APP_SENTRY_ENVIRONMENT=production
REACT_APP_SENTRY_TRACES_SAMPLE_RATE=0.2

# LogRocket (Session replay)
REACT_APP_LOGROCKET_APP_ID=xxxxxx/your-app

# Hotjar (Analytics & Heatmaps)
REACT_APP_HOTJAR_ID=xxxxxxx
REACT_APP_HOTJAR_SNIPPET_VERSION=6

# ============================================
# DEVELOPMENT TOOLS
# ============================================
# Enable React DevTools in production (not recommended)
REACT_APP_ENABLE_DEVTOOLS=false

# Enable console logs in production
REACT_APP_ENABLE_CONSOLE_LOGS=false

# Debug mode
REACT_APP_DEBUG_MODE=false

# ============================================
# CUSTOM CONFIGURATION
# ============================================
# Portfolio specific settings
REACT_APP_HERO_TITLE=Rahul Reddy Allu
REACT_APP_HERO_SUBTITLE=Business Analyst & Developer
REACT_APP_PRIMARY_COLOR=#7c3aed
REACT_APP_SECONDARY_COLOR=#06b6d4

# Animation speeds (in seconds)
REACT_APP_ANIMATION_DURATION=0.3
REACT_APP_PAGE_TRANSITION_DURATION=0.5

# Maximum file upload size (in MB)
REACT_APP_MAX_FILE_SIZE=5

# Supported file types for uploads
REACT_APP_ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf,.doc,.docx

# ============================================
# NOTES
# ============================================
# 1. Copy this file to .env.local for local development
# 2. Copy to .env.production for production builds
# 3. Never commit .env files with real values to git
# 4. Use .env.example as a template for new developers
# 5. All REACT_APP_ prefixed variables are accessible in the app
# 6. Other variables are only used during build time

# ============================================
# INSTRUCTIONS
# ============================================
# To use this file:
# 1. Copy: cp .env.example .env.local
# 2. Fill in your actual values
# 3. Restart development server: npm start
# 4. For production: cp .env.example .env.production
